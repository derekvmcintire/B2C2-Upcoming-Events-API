{
  "name": "events-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn dev-server.ts",
    "firestore:emulator": "firebase emulators:start --only firestore",
    "vercel:dev": "vercel dev",
    "deploy": "vercel deploy --prod",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --config jest.config.js --testPathIgnorePatterns=__tests__/unit",
    "test:integration": "jest --config jest.config.js --testPathIgnorePatterns=__tests__/integration",
    "test:smoke": "jest --config jest.config.js --testPathIgnorePatterns=__tests__/smoke"
  },
  "dependencies": {
    "@vercel/node": "^4.0.0",
    "firebase-admin": "^12.0.0",
    "node-fetch": "^3.3.2",
    "path-to-regexp": "^8.2.0",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "firebase": "^11.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
